#!/bin/bash
if [[ -z "$1" ]]; then
  echo "USAGE: $0 INPUTFILE"
  echo "  INPUTFILE is the JSON provided to the lambda function as input."
  exit 1
fi

INPUTFILE="$1"
DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
"$DIR/build-lambda"
echo "Built new lambda binary"

aws_key="$(grep key_id ~/.aws/credentials | awk '{ print $3 }')"
aws_secret="$(grep secret ~/.aws/credentials | awk '{ print $3 }')"

docker run --rm \
  -e "AWS_ACCESS_KEY_ID=$aws_key" \
  -e "AWS_SECRET_ACCESS_KEY=$aws_secret" \
  -v "$PWD/target/lambda":/var/task \
  lambci/lambda:go1.x kirby-s3 \
  "$(cat $INPUTFILE)"